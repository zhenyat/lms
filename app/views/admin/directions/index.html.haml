%h1= t Direction.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Direction.human_attribute_name(:name)
      %th= Direction.human_attribute_name(:title)
      %th= Direction.human_attribute_name(:cover)
      %th= Direction.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @directions.each do |direction|
      %tr
        %td= direction.name
        %td= direction.title
        %td= direction.cover
        %td= direction.position
        %td= status_mark direction.status
        %td= render 'admin/shared/index_buttons', resource: direction
%br
.row
  .col-sm-2
    = link_to t('actions.create'), new_admin_direction_path, class: 'btn btn-primary btn-block'

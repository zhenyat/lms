%h1= t Subject.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Subject.human_attribute_name(:name)
      %th= Subject.human_attribute_name(:title)
      /%th= Subject.human_attribute_name(:content)
      %th= Subject.human_attribute_name(:cover)
      %th= Subject.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @subjects.each do |subject|
      %tr
        %td= subject.name
        %td= subject.title
        /%td= subject.content
        %td= image_tag subject.cover.thumb.url if subject.cover?
        %td= subject.position
        %td= status_mark subject.status
        %td= render 'admin/shared/index_buttons', resource: subject
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_subject_path, class: 'btn btn-primary btn-block'

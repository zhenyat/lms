%h1= t Tour.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Tour.human_attribute_name(:title)
      %th= Tour.human_attribute_name(:start_date)
      %th= Tour.human_attribute_name(:finish_date)
      /%th= Tour.human_attribute_name(:content)
      %th= Tour.human_attribute_name(:cover)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @tours.each do |tour|
      %tr
        %td= tour.title
        %td= tour.start_date
        %td= tour.finish_date
        /%td= tour.content
        %td= image_tag tour.cover.thumb.url if tour.cover?
        %td= status_mark tour.status
        %td= render 'admin/shared/index_buttons', resource: tour
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_tour_path, class: 'btn btn-primary btn-block'

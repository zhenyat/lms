#myCarousel.carousel.slide.carousel-fade{"data-ride" => "carousel", "data-interval" => "4000"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    - for i in 1..images.count-1
      %li{"data-slide-to" => "i", "data-target" => "#myCarousel"}

  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    - images.each_with_index do |value, index|
      - if index == 0
        .item.active
          /= image_tag(value.model.cover.view.url, class: 'center-block')
          = link_to image_tag(value.model.cover.view.url, :class => "center-block"), admin_root_path
          .carousel-caption
            %h3= value.model.title
      - else
        .item
          /= image_tag(value.model.cover.view.url, class: 'center-block')
          = link_to image_tag(value.model.cover.view.url, :class => "center-block"), admin_root_path
          .carousel-caption
            %h3= value.model.title
  
  / Left and right controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only= t :previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only= t :next
